
@model User
@{
    ViewData["Title"] = "Identifícate";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">IDENTIFÍCATE</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-4">
                            <label asp-for="Username" class="form-label fw-bold" style="color: white;">Username:</label>
                            <input asp-for="Username" class="form-control form-control-lg" required />
                            <div class="invalid-feedback">
                                Por favor ingresa tu usuario
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label fw-bold" style="color: white;">Password:</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" required />
                            <div class="invalid-feedback">
                                Por favor ingresa tu contraseña
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-primary" onclick="window.location.href='https://localhost:7172/Home/GetJoke/en'">
                                Iniciar Sesión
                            </button>

                        </div>
                    </form>
                </div>

       
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #34495e;
    }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background-image: url("https://i.pinimg.com/736x/56/02/12/56021290df09f647445a41bd8fcfc8b4.jpg");
    }

    .card-header {
        font-size: 1.5rem;
        letter-spacing: 1px;
        padding: 1.5rem;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
    }

    .btn-primary {
        background-color: #6417ff;
        border: none;
        border-radius: 10px;
        padding: 12px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-primary:hover {
            background-color: #ff1111;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .invalid-feedback {
        font-size: 0.9rem;
    }
</style>

