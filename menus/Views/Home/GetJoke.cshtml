@model Joke

@{
    ViewData["Title"] = "Chiste de Programación";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">Chiste de Programación (@(Model.Language == "es" ? "Español" : "Inglés"))</h3>
                </div>
                <div class="card-body">
                    @if (Model.Type == "single")
                    {
                        <p class="lead text-center">@Model.Content</p>
                    }
                    else
                    {
                        <p class="lead">@Model.Setup</p>
                        <hr>
                        <p class="lead font-weight-bold text-center">@Model.Delivery</p>
                    }
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-6">
                            <small>Categoría: @Model.Category</small>
                        </div>
                   
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <div class="btn-group">
                    <a href="/Home/GetJoke/en" class="btn btn-outline-primary">Chiste en Inglés</a>
                    <a href="/Home/GetJoke/es" class="btn btn-outline-primary">Chiste en Español</a>
                </div>
                <div class="mt-2">
                    <a href="/Home/GetJoke/@Model.Language" class="btn btn-success">Otro chiste</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .lead {
        font-size: 1.25rem;
    }

    .card-header {
        border-radius: 0 !important;
    }
</style>